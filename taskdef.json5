// Placeholders are dynamically replaced at build time in CodeBuild.
// Refer to buildspec.yml.
// Refer to Terraform's CodeBuild settings for environment variables.
{
    "family": "<PROJECT>-<ENVIRONMENT>-task",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "<TASK_EXECUTION_ROLE_ARN>",
    "taskRoleArn": "<TASK_ROLE_ARN>",
    "containerDefinitions": [
        {
            "name": "<CLUSTER_NAME>-app",
            "image": "<ECR_IMAGE_URL>",
            "essential": true,
            "portMappings": [
                {
                    "protocol": "tcp",
                    "containerPort": 8000,
                    "hostPort": 8000
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "<AWSLOGS_GROUP_NAME>",
                    "awslogs-region": "<AWS_REGION>",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "tags": [
        {
            "key": "Name",
            "value": "<PROJECT>-<ENVIRONMENT>-task"
        }
    ]
}
